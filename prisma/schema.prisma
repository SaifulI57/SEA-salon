generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  username  String    @unique
  firstName String?
  lastName  String?
  email     String    @unique
  password  String
  gender    String?
  domicile  String?
  role      Role      @default(CUSTOMER)
  reserves  Reserve[]
  reviews   Review[]
}

model Reserve {
  id        String   @id @default(cuid())
  duration  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  branch    Branch   @relation(fields: [branchId], references: [id])
  branchId  String
  reviews   Review[]
}

model Review {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rating    Int
  comment   String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  reserve   Reserve? @relation(fields: [reserveId], references: [id])
  reserveId String?
}

model Branch {
  id           String    @id @default(cuid())
  name         String    @unique
  address      String
  contactPhone String
  contactEmail String
  services     Service[]
  reserves     Reserve[]
}

model Service {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?
  price       Int
  duration    Int
  Branch      Branch? @relation(fields: [branchId], references: [id])
  branchId    String?
}

enum Role {
  ADMIN
  CUSTOMER
}
